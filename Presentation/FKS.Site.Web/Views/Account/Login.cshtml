@model FKS.Site.Models.LoginModel
@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

@*@Scripts.Render("~/bundles/ajaxform")*@

@using (Html.BeginForm())
{
    <div class="form-horizontal" style="margin-top:40px;" role="form">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-3 control-label">用户名:</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Account)
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-3 control-label">密码：</label>
            <div class="col-sm-9">
                @Html.PasswordFor(m => m.Password)
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12" style="text-align: center; font-size:12px;color:red;">
                @Html.ValidationSummary()
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12" style="text-align: center;">
                <button type="submit" class="btn btn-default">登陆</button>
            </div>
        </div>
    </div>



}