@Styles.Render("~/contents/jquery.plot/jquery.jqplot.min.css")

<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'north',border:false,collapsible:false" style="height: 90px;padding: 10px; overflow: hidden; border-bottom-width: 1px;">
        <div style="margin: 5px;" class="form-inline">
            <div class="form-group">
                <label class="control-label">统计方式：</label>
            </div>
            <div class="form-group">
                <select id="reportType" class="easyui-combobox" style="width:200px;" data-operation="required:true">
                    <option value="01">日统计</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">排列方式：</label>
            </div>
            <div class="form-group">
                <select id="sortType" class="easyui-combobox" style="width:200px;" data-operation="required:true">
                    <option value="01">最高</option>
                    <option value="02">最低</option>
                </select>
            </div>
        </div>
        <div style="margin: 5px" class="form-inline">
            <a href="#"
               data-operation="doSearch"
               iconcls="icon-search"
               class="easyui-linkbutton"
               data-options="plain:true,toggle:false">
                查询
            </a>
        </div>
    </div>

    <div data-options="region:'center',border:false,split:true">
        <div id="tt" class="easyui-tabs" data-options="fit:true, border:false">
            <div title="数据列表" style="padding:20px">

            </div>
        </div>
    </div>
</div>
