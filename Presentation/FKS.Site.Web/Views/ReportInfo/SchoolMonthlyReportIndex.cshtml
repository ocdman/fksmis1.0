@Styles.Render("~/contents/jquery.plot/jquery.jqplot.min.css")

<div class="easyui-layout" data-options="fit:true">
    <div data-options="region:'north',border:false,collapsible:false" style="height: 100px;padding: 10px; overflow: hidden; border-bottom-width: 1px;">
        <div style="margin: 5px;" class="form-inline">
            <div class="form-group">
                <label class="control-label">统计方式：</label>
            </div>
            <div class="form-group">
                <select id="reportType" class="easyui-combobox" style="width:200px;" data-operation="required:true">
                    <option value="01">日统计</option>
                    <option value="02">周统计</option>
                    <option value="03" selected="selected">月统计</option>
                </select>
            </div>
            <div class="form-group" style="margin-left:10px;">
                <label class="control-label">设备选择：</label>
            </div>
            <div class="form-group">
                <input data-role="type" type="text" class="form-control input-sm EquipInfo" />
            </div>
        </div>
        <div style="margin: 5px;" class="form-inline">
            <div class="form-group">
                <label class="control-label">排序对象：</label>
            </div>
            <div class="form-group">
                <select id="sortObject" class="easyui-combobox" style="width:150px;" data-operation="required:true">
                    <option value="01">排放量</option>
                    <option value="02">油烟浓度</option>
                    <option value="03">报警次数</option>
                </select>
            </div>
            <div class="form-group" style="margin-left:10px;">
                <label class="control-label">排列方式：</label>
            </div>
            <div class="form-group">
                <select id="sortType" class="easyui-combobox" style="width:150px;" data-operation="required:true">
                    <option value="01">从高到低</option>
                    <option value="02">从低到高</option>
                </select>
            </div>
        </div>
        <div style="margin: 5px" class="form-inline">
            <div class="form-group">
                <label class="control-label">开始日期：</label>
            </div>

            <div class="form-group">
                <input data-role="type" type="text" data-options="required:true,value:'6/3/2014'" class="form-control input-sm easyui-datetimebox startTime" style="width:150px" />
            </div>

            <div class="form-group" style="margin-left:10px;">
                <label class="control-label">截止日期：</label>
            </div>

            <div class="form-group">
                <input data-role="type" type="text" data-options="required:true,value:'7/2/2014'" class="form-control input-sm easyui-datetimebox endTime" style="width:150px" />
            </div>

            <a href="#"
               data-operation="doSearch"
               iconcls="icon-search"
               class="easyui-linkbutton"
               data-options="plain:true,toggle:false">
                查询
            </a>
            <a href="#"
               data-operation="createReport"
               iconcls="icon_19"
               class="easyui-linkbutton"
               data-options="plain:true,toggle:false">
                生成报表
            </a>
        </div>
    </div>

    <div data-options="region:'center',border:false,split:true">
        <div id="tt" class="easyui-tabs" data-options="fit:true, border:false">
            <div title="学校油烟监测" id="concentrationTab" style="padding:20px">

            </div>
        </div>
    </div>
</div>
