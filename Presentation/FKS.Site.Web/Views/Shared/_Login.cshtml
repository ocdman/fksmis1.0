<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/contents/bootstrap/bootstrap")
    @Styles.Render("~/contents/login/login")

</head>
<body>
    <img class="background" src="~/contents/images/background.jpg" alt="" style="position:absolute;z-index:-1;" />

    <div class="container">

        <div class="top">
            @ViewBag.Title
        </div>
        <div class="center">
            @RenderBody()
        </div>
        <div class="bottom">
            @ViewBag.Footer
        </div>

    </div>
    
</body>
</html>
